<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<%= render :partial => 'spree/admin/shared/product_tabs', :locals => { :current => 'Subscription_Units' } %>

<%= csrf_meta_tags %>

<div data-hook="admin_product_subscription_unit_edit_header">
  <h2><%= t("editing_subscription_unit") %></h2>
  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @subscribable_product } %>
</div>

<div data-hook="admin_product_subscription_unit_edit_form">
  <div id="subscription_unit-form-wrapper">
    <%= form_for [@subscribable_product, @subscription_unit], :url => admin_subscribable_product_subscription_unit_url(@subscribable_product, @subscription_unit) do |f| %>
      <%= render 'form', :f => f  %>

      <p class="form-buttons" data-hook="buttons">
     	  <%= button t(:update) %>
      </p>
    <% end %>
  </div>
</div>
