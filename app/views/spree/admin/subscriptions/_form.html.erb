<%= f.field_container :product do %>
  <%= f.label :subscribable_product_id, t(:product) %><br />
  <%= f.select :subscribable_product_id, @products %>

  <%= f.label :remaining_subscription_units, t(:remaining_subscription_units, :scope => 'activerecord.attributes.spree/subscription') %><br />
  <%= f.number_field :remaining_subscription_units %>
  <%= f.error_message_on :subscribable_product %>
<% end %>
